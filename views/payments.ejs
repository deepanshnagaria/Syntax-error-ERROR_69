	<div>
		<div class="container">
			<form action="/rates/<%=payment._id%>/edit?_method=PUT" method="POST">
			  <legend>PERSONAL INFO</legend>
			  <div class="form-group">
			    <label for="category">Mode</label>
			    <input type="text" class="form-control" id="category" aria-describedby="emailHelp" placeholder="Mode" name="payment[mode]" value="<%=payment.mode%>">
			  </div>
			  <div class="form-group">
			    <label for="category50">Client ID(Paypal):</label>
			    <input type="text" class="form-control" id="category50" aria-describedby="emailHelp" placeholder="ID" name="payment[accountID]" value="<%=payment.accountID%>">
			  </div>
			  <div class="form-group">
			    <label for="category51">Client Secret(Paypal):</label>
			    <input type="text" class="form-control" id="category51" aria-describedby="emailHelp" placeholder="Secret" name="payment[accountSecret]" value="<%=payment.accountSecret%>">
			  </div>
			  <br>
			  <br>
			  <h3>COMMISION RATES(in percentages):</h3>
			  <div class="form-group">
			    <label for="category1">Localised Visibility:</label>
			    <input type="number" class="form-control" id="category1" aria-describedby="emailHelp" placeholder="localRate" name="payment[localRate]" value="<%=payment.localRate%>">
			  </div>
			  <div class="form-group">
			    <label for="category2">Town-based Visibility:</label>
			    <input type="number" class="form-control" id="category2" aria-describedby="emailHelp" placeholder="townRate" name="payment[townRate]" value="<%=payment.townRate%>">
			  </div>
			  <div class="form-group">
			    <label for="category3">State-based Visibility:</label>
			    <input type="number" class="form-control" id="category3" aria-describedby="emailHelp" placeholder="stateBased" name="payment[stateBased]" value="<%=payment.stateBased%>">
			  </div>
			  <div class="form-group">
			    <label for="countryBased">Country-based Visibility:</label>
			    <input type="number" class="form-control" id="countryBased" aria-describedby="emailHelp" placeholder="countryBased" name="payment[countryBased]" value="<%=payment.countryBased%>">
			  </div>
			  <div class="form-group">
			    <label for="internationalBased">International Visibility:</label>
			    <input type="number" class="form-control" id="internationalBased" aria-describedby="emailHelp" placeholder="countryBased" name="payment[internationalBased]" value="<%=payment.internationalBased%>">
			  </div>
			  <br>
			  <input type="submit" class="btn btn-primary"></input>
			</form>
