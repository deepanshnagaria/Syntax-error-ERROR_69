	<div>
		<div class="container">
			<form action="/categories/<%=category._id%>/edit?_method=PUT" method="POST">
			  <legend>EDIT CATEGORY</legend>
			  <div class="form-group">
			    <label for="category">Name</label>
			    <input type="text" class="form-control" id="category" aria-describedby="emailHelp" placeholder="Category" name="name" value="<%=category.name%>">
			  </div>
			  <h3>SubCategories:</h3>
			  <%for(var i=1;i<=category.subCategories.length;i++){%>
			  	<div class="<%=category.subCategories[i-1]._id%>">
			  		<%=i%>. <%=category.subCategories[i-1].name%> <a href="/subCategories/<%=category.subCategories[i-1]._id%>/edit"><button type="button" class="btn btn-primary" value="<%=category.subCategories[i-1]._id%>">Edit</button></a><a href="#"><button type="button" class="btn btn-danger" value="<%=category.subCategories[i-1]._id%>">Remove</button></a>
			  	</div>
			  	<p class="no" id="<%=category.subCategories[i-1]._id%>"><%=category.subCategories[i-1]._id%></p>
			  <%}%>
			  <div class="form-group no">
			    <label for="removed">Removed</label>
			    <input type="text" class="form-control" id="removed" aria-describedby="emailHelp" placeholder="Category" name="removed">
			  </div>
			  <span id="repeat">
			  <div class="form-group" >
			    <label for="category" >Add SubCategory</label>
			    <select name="subCategory[]" class="form-control" id="subCategorySelected">
			    		<option value="none">
			    			Pick a sub-category!
			    		</option>
			    		<% for(var i=0;i<subCategories.length;i++){ %>
			    			<option value="<%=subCategories[i]._id%>">
			    				<%=subCategories[i].name %>
			    			</option>
			    		<% }%>
			    </select>
			  </div>
			  </span>
			  <a class="btn btn-primary addmore" id="sub">Add more subCategories..</a>
			  <a id="underline" href="/subCategories/new" >Create new subCategory?(not in the list)</a>
			  <br>
			  <br>
			  <input type="submit" class="btn btn-primary"></input>
			</form>
		</div>
	</div>
